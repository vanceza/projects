#!/bin/sh

# Imports
cd $(dirname "$0")
source "./utils.sh"
for file in project-*.sh # Import subcommands
do
    source "./${file}"
done
cd - >/dev/null

# XDG standard says where data, config, and cache files go.
[ -n "${XDG_CACHE_HOME}" ] || XDG_CACHE_HOME="${HOME}/.cache" # Cache files
[ -n "${XDG_CONFIG_HOME}" ] || XDG_CONFIG_HOME="${HOME}/.config" # Config files
[ -n "${XDG_DATA_HOME}" ] || XDG_DATA_HOME="${HOME}/.local/share" # Data files

export PROJECTS_HOME="${HOME}"
export PROJECTS_ARCHIVE_DIR="${XDG_DATA_HOME}/projects"
export PROJECTS_METADATA_DIR="${XDG_CONFIG_HOME}/projects"
export PROJECTS="${PROJECTS_METADATA_DIR}/PROJECTS"

if [ $# -eq 0 ]
then
    project_help
    exit 1
fi

COMMAND="$(echo "$1" | tr '-' '_')" # Replace - with _ in COMMAND
shift
if is_function "project_${COMMAND}"
then
    "project_${COMMAND}" "$@"
    exit $?
else
    echo "Not a valid subcommand: ${COMMAND}" >/dev/stderr
    project_help
    exit 1
fi
